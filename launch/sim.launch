<launch>
  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find CRoCS)/worlds/sim.sdf"/>
  </include>

  <!-- BEGIN CUBE 1 -->
  <group ns="cube1">
    <include file="$(find CRoCS)/launch/cube.launch">
      <arg name="robot_name" value="cube1"/>
      <arg name="x_pos" value="0.0"/>
      <arg name="y_pos" value="0.0"/>
      <arg name="rotate" value="0.0"/>
      <arg name="rviz" value="true"/>
      <arg name="control" value="true"/>
      <arg name="sim" value="true"/>
    </include>
  </group>

  <!-- BEGIN CUBE 2 -->
  <group ns="cube2">
    <include file="$(find CRoCS)/launch/cube.launch">
      <arg name="robot_name" value="cube2"/>
      <arg name="x_pos" value="1"/>
      <arg name="y_pos" value="0.0"/>
      <arg name="rotate" value="-90.0"/>
      <arg name="control" value="false"/>
      <arg name="sim" value="true"/>
    </include>
  </group>


</launch>
